
<div class="container-fluid">
    <div class="row pt-5">
        <% if !user_signed_in? %>
        <div class="col-1 text-center">
            <h1>HABITIZER</h1>
            <p>Take a step towards your true self</p>
        </div>
        <% else %>
            <div class="col-3">

            </div>
            <div class="col-6">
                <% @activities_from_user.each do |activity| %>
                    <div class="row">
                        <div class="container card">
                            <%= activity.name %>
                        </div>
                    </div>
                <%end%>
            </div>

            <div class="col-3   ">

                 <%= link_to "+", activities_new_path,  class: 'btn btn-primary floating-button' %>
            </div>
        <% end %>
    </div>
</div>
