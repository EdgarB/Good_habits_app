
<div class="container-fluid">
    <div class="row ">
        <% if !user_signed_in? %>
        <div class="col-12 text-center">
            <h1>HABITIZER</h1>
            <p>Take a step towards your true self</p>
        </div>
        <% else %>
            <div class="col-3">

            </div>
            <div class="col-6">
                <% @activities_from_user.each do |activity| %>
                    <div class="row m-2">
                        <div class="container card p-2">
                            <div class="row">
                                <div class="col-12">
                                    <h5 class="card-title"><%= activity.name %></h5>
                                </div>
                                <div class="col-12">
                                    <p class="card-text"><%= activity.description%></p>
                                </div>
                                <div class="col-12">
                                    <p class="card-text"> <%= activity.frequency%></p>
                                </div>

                            </div>
                            <div class="row ">
                                <div class="col-8">

                                </div>
                                <div class="col-4 ">
                                    <%= link_to "Add a Log", new_activity_log_path(activity), class: "btn btn-primary float-right" %>
                                </div>

                            </div>


                        </div>
                    </div>
                <%end%>
            </div>

            <div class="col-3   ">

                 <%= link_to "+", new_activity_path,  class: 'btn btn-primary floating-button' %>
            </div>
        <% end %>
    </div>
</div>
