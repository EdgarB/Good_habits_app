




<% if !user_signed_in? %>
    <div class="container-fluid">
        <div class="container ">
            <h1 id="app_name" class="display-4 text-center">HABITIZER</h1>
            <p id="app_description" class="lead text-center">Take a step towards your true self</p>
        </div>

    </div>


<% else %>
    <div class="container ">
        <div class="row">
            <div class="col-12">
                <h1 class="content_title text-center">Your habits</h1>
            </div>

        </div>
        <div class="row ">
            <div class="col-2">

            </div>
            <div class="col-8">
                <% @activities_from_user.each do |activity| %>
                    <div class="row m-2">
                        <div class="activity_card container card mt-2 mb-2 p-2">
                            <div class="row">
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-12">
                                            <h5 class="semi_title"><%= activity.name %></h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <p class="card-text"><%= activity.description%></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <p class="card-text"> <%= activity.frequency%></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="row pb-4">
                                        <div class="col-12">
                                            <%= link_to "Check activity's logs",activity_logs_path(activity), class: "url_to_logs card-link float-right" %>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 ">
                                            <%= link_to "Add a Log", new_activity_log_path(activity), class: "btn_add_log btn btn-primary float-right" %>
                                        </div>
                                    </div>
                                </div>
                            </div>





                        </div>
                    </div>
                <%end%>
            </div>

            <div class="col-2   ">

                 <%= link_to "+", new_activity_path,  class: 'btn btn-primary grow floating-button' %>
            </div>
        </div>
    </div>
<% end %>
