
<div class="container-fluid">
    <div class="container mt-5 pt-5 pb-5 card">
        <div class="row">
            <div class="col-2 col-md-1">
            </div>
            <div class="col-8 col-md-4">
                <div class="container p-5">
                    <div class="row pl-5">
                        <h1>CREATE</h1>
                    </div>
                    <div class="row pl-5">
                        <h1>A</h1>
                    </div>
                    <div class="row pl-5">
                        <h1>NEW</h1>
                    </div>
                    <div class="row pl-5">
                        <h1>HABIT</h1>
                    </div>
                </div>
            </div>
            <div class="col-2 col-md-1">
            </div>

            <div class="col-12 col-md-6">
                <%= form_for @activity, url: {action: "create"} do |f| %>
                <div class="row">

                    <div class="col-12">
                        <div class="form-group">
                          <%= f.label :name, for:"activity_name" %><br />
                          <%= f.text_field :name, autofocus: true, autocomplete: "name", id: "activity_name", placeholder:"Enter your habit name", class:"form-control" %>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <%= f.label :description, for: "activity_description"%><br />
                            <%= f.text_field :description, autocomplete: "description", id:"activity_description", placeholder: "Enter a brief description of your new habit", class:"form-control" %>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <p>Frequency</p>
                            <%= f.radio_button :frequency,"Daily", id: "activity_daily_frequency" %>
                                <%= f.label :frequency,"Daily", for:"activity_daily_frequency" %>
                            <%= f.radio_button :frequency,"Weekly", id: "activity_weekly_frequency" %>
                                <%= f.label :frequency,"Weekly", for:"activity_weekly_frequency" %>
                        </div>
                    </div>
                </div>
                    <div class="row pr-3 pl-3">

                            <div class="col-4 col-md-6 col-xl-8">

                            </div>
                            <div class="col-4 col-md-3 col-xl-2 text-right">
                                    <%= link_to "Cancel", root_path,method: :get, class: "btn btn-secondary"  %>
                            </div>
                            <div class="col-4 col-md-3 col-xl-2 text-right">
                                <%= f.submit "Create", class:"btn btn-primary" %>
                            </div>

                    </div>



                <% end %>
            </div>
        </div>
    </div>
</div>
