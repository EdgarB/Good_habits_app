<div class="container">

    <h2>Login page</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
          <div class="col-12">
              <div class="form-group">
                  <%= f.label :email, for:"user_email" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "user_email", placeholder:"Enter your email", class:"form-control" %>
              </div>
          </div>
          <div class="col-12">
              <div class="form-group">
                  <%= f.label :password, for:"user_pwd" %><br />
                  <%= f.password_field :password, autocomplete: "current-password", id: "user_pwd", placeholder:"Enter your password", class:"form-control" %>
              </div>
          </div>
           <% if devise_mapping.rememberable? %>
              <div class="col-12">
                  <div class="form-group">
                      <%= f.check_box :remember_me, id: "user_remember" %>
                      <%= f.label :remember_me, for:"user_remember" %>
                  </div>
              </div>
           <% end %>
          <div class="col-12">
              <div class="actions">
                  <%= f.submit "Log in", class:"btn btn-primary" %>
              </div>
          </div>
          <div class="col-12">
              <%= render "devise/shared/links" %>
          </div>
      </div>
    <% end %>


</div>
